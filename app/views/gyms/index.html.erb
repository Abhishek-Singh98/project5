<p id="notice"><%= notice %></p>

<h1>Gyms</h1>

<table>
  <thead>
    <tr>
    <th>Name</th>
    <th>Email</th>
    <th>City</th>
    <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
      <td><%=gym.name%></td>
      <td><%=gym.email%></td>
      <td><%=gym.city%></td>
        <td><%= link_to 'Show', gym %></td>
        <% if logged_in? && gym = current_user%>
        <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
        <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

